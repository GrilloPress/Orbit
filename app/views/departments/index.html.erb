<h1>Departments</h1>
<hr>

<div class="panel panel-primary">
  <div class="panel-heading">
  </div>
  
  <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>

    <tbody>
      <% @departments.each do |department| %>
        <tr>
          <td><%= link_to department.id, department %></td>
          <td><%= department.title %></td>
          <td><%= department.description %></td>
          <td><%= link_to 'View department', department %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
</div>

  <% if current_user.admin %>
    <%= link_to 'New Department', new_department_path %>
  <% end %>

