<h1><%= @user.username %>'s profile</h1>
<hr>

<% if @user.profile_pic.present? %>
  <%= image_tag @user.profile_pic(:thumb), class: "img-circle pull-left" %>
<% end %>
<p><%= @user.biography %></p>
<p class="clearfix"></p>

<div class="panel panel-primary">
  <!-- Default panel contents -->
  <div class="panel-heading">
  </div>
  <table class="table ">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Job title</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
      <tr>  
        <td><%= link_to @user.id, @user %></td>
        <td><%= @user.email %></td>
        <td><%= @user.job_title %></td>
        
        <td>
          <% if current_user.id == @user.id or current_user.admin? %>
            <%= link_to 'Edit profile', edit_user_path(@user) %>, <%= link_to 'Delete profile', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% else %>
            N/A
          <% end %>
        </td>
      </tr>
  </tbody>
</table>
</div>

<% content_for :right_sidebar do %>

<ul class="list-unstyled">
  <li><%= link_to 'Back', users_path %></li>
</ul>

<% end %>
