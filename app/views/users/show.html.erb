<h1><%= @user.username %>'s profile</h1>
<hr>

<div class="panel panel-primary">
  <!-- Default panel contents -->
  <div class="panel-heading">
  </div>
  <div class="panel-body">
    <p><%= @user.biography %></p>
  </div>
  
  <table class="table ">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Job title</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
      <tr>  
        <td><%= @user.id %></td>
        <td><%= @user.email %></td>
        <td><%= @user.job_title %></td>
        <td><%= link_to 'Edit profile', edit_user_path(@user) %>, <%= link_to 'Delete profile', @user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  </tbody>
</table>
</div>

<% content_for :right_sidebar do %>
<%= image_tag @user.profile_pic.url, class: "img-responsive img-circle" %>

<ul class="list-unstyled">
  <li><%= link_to 'Back', users_path %></li>
</ul>
<% end %>
