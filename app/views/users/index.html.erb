<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>


<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th>Email</th>
      <th>Job title</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>  
        <td><%= link_to user.id, user %></td>
        <td><%= user.username %></td>
        <td><%= mail_to user.email, user.email %></td>
        <td><%= user.job_title %></td>
        <td><%= link_to 'View profile', user %>, <%= link_to 'Edit', edit_user_path(user) %>, <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

